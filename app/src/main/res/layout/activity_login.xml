<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="60dp"
    android:paddingHorizontal="45dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/ivLock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_baseline_lock_24"
        />

    <TextView
        android:id="@+id/tvLoginTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="@color/red"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLock" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/h"
        app:layout_constraintTop_toBottomOf="@id/tvLoginTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/etEmail"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="18sp"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/et_round_corner"
            android:textColorHint="@color/grey"
            android:hint="person@example.com"
            android:drawableRight="@drawable/ic_baseline_mail_outline_24"
            />

        <RelativeLayout
            android:id="@+id/rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/etEmail"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey"
                android:layout_height="48dp"
                android:textSize="18sp"
                android:padding="10dp"
                android:textAlignment="viewStart"
                android:background="@drawable/et_round_corner"
                app:layout_constraintBottom_toBottomOf="parent"
                android:hint="PASSWORD"
                />
            <ImageButton
                android:background="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/ibHide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_remove_red_eye_24"
                android:layout_alignTop="@id/etPassword"
                android:layout_alignBottom="@id/etPassword"
                android:layout_alignRight="@id/etPassword"
                android:paddingRight="5dp"
                />
        </RelativeLayout>
        <Button
            android:layout_marginTop="20dp"
            android:id="@+id/btnLogin"
            android:ems="10"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Login"
            android:background="@drawable/btn_round_corner"
            />
        <TextView
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Atau masuk sebagai tamu"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>